<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gestioninventairesystem.Controller.AddProductController"
            prefHeight="600.0" prefWidth="900.0">
    <children>
        <Button text="Back" fx:id="backButton" layoutX="10.0" layoutY="10.0" onAction="#handleBackButton"/>

        <Label text="Product Name:" layoutX="10.0" layoutY="60.0" />
        <TextField fx:id="nameField" layoutX="120.0" layoutY="60.0" promptText="Enter product name" />

        <Label text="Category:" layoutX="10.0" layoutY="100.0" />
        <TextField fx:id="categoryField" layoutX="120.0" layoutY="100.0" promptText="Enter category" />

        <Label text="Price:" layoutX="10.0" layoutY="140.0" />
        <TextField fx:id="priceField" layoutX="120.0" layoutY="140.0" promptText="Enter product price" />

        <Label text="Quantity:" layoutX="10.0" layoutY="180.0" />
        <TextField fx:id="quantityField" layoutX="120.0" layoutY="180.0" promptText="Enter quantity" />

        <Button text="Submit" fx:id="submitButton" layoutX="120.0" layoutY="220.0" onAction="#onAddProductButtonClicked" />

        <Label fx:id="messageLabel" layoutX="120.0" layoutY="250.0" text="" style="-fx-text-fill: red;" />
    </children>
</AnchorPane>
