<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="404.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestioninventairesystem.Controller.AuthController">
    <children>
        <VBox alignment="CENTER" prefHeight="407.0" prefWidth="800.0" spacing="20">
            <children>
                <!-- Username TextField -->
                <TextField fx:id="usernameField" prefHeight="43.0" prefWidth="641.0" promptText="Email">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </TextField>

                <!-- Password TextField -->
                <TextField fx:id="passwordField" prefHeight="43.0" prefWidth="294.0" promptText="Password">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </TextField>

                <!-- Login Button -->
                <Button graphicTextGap="6.0" mnemonicParsing="false" onAction="#login" prefHeight="43.0" prefWidth="156.0" text="S'authentifier" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold Italic" size="17.0" />
                    </font>
                </Button>

                <!-- Label for success/error messages -->
                <Label fx:id="messageLabel" prefHeight="43.0" prefWidth="294.0" textAlignment="CENTER" />
            </children>
        </VBox>
    </children>
</AnchorPane>
